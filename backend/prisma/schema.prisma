generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

model User {
  id           String  @id @default(uuid())
  name         String  @unique
  passwordHash String
  rating       Float?
  stories      Story[]
}

model Story {
  id         String   @id @default(uuid())
  title      String
  content    String
  user       User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id    String
  created_at DateTime
  rating     Float?
  ratings    Rating[]
}

// Throw away relation to user here, keeping id as soft relation
model Rating {
  id           String   @id @default(uuid())
  created_at   DateTime
  actual_score Float
  user_id      String
  rating_power Float
  to_story     Story    @relation(fields: [to_story_id], references: [id], onDelete: Cascade)
  to_story_id  String
}
