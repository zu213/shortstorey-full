{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "ts-node ./src/app.ts",
    "dev": "nodemon -e ts,prisma,sql ./src/app.ts",
    "test": "jest --testPathPattern=test/",
    "prisma-setup": "prisma migrate dev && prisma generate",
    "prisma-format": "prisma format"
  },
  "dependencies": {
    "@fastify/cors": "^7.0.0",
    "@prisma/client": "^3.14.0",
    "bcrypt": "^6.0.0",
    "fastify": "^3.29.0",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^3.14.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.1",
    "@types/jsonwebtoken": "^9.0.9",
    "jest": "^29.5.0",
    "jest-expect-message": "^1.1.3",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "jest-expect-message"
    ]
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
